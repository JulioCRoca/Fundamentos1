#include <iostream>
using namespace std;
int main()
{
    float numero1,numero2,numero3; //asignamos el tipo de variable 
    float promedio;
    cout<<"Ingrese el 1er numero: "; //verificamos que los numeros sean validos 
    cin>>numero1;
    if(numero1>=0 && numero1<=10){
        cout<<"Ingrese el 2do numero: "; //verificamos que el 2do numero sea valido 
        cin>>numero2; 
            if(numero2>=0 && numero2<=10){
            cout<<"Ingrese el 3er numero: "; //verificamos que el 3er numero sea valido 
            cin>>numero3;
                if(numero3>=0 && numero3<=10){
                    promedio=(numero1+numero2+numero3)/3.0; //realizamos el promedio de los 3 numeros
                    cout<<"El promedio es:"<<promedio; //mostramos el resultado del promedio en pantalla 
                }
                else 
           cout<<"error";
           
        }
        else 
           cout<<"error";
    }
    else
    cout<<"error";
    return 0;
}
